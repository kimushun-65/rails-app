<%= render "shared/error_message", comment: comment %>
<div class="row mt-4">
  <div class="col-md-12">
    <div class="card shadow">
      <div class="card-header bg-light d-flex justify-content-between align-items-center">
        <h3 class="mb-0 fs-4">コメントを投稿する</h3>
      </div>
      <div class="card-body">
        <%= form_with(model: Comment.new, local: true) do |f| %>
          <div class="mb-3">
            <%= f.label :name, '名前', class: 'form-label' %>
            <%= f.text_field :name, class: 'form-control', required: true %>
          </div>
          <div class="mb-3">
            <%= f.label :comment, 'コメント', class: 'form-label' %>
            <%= f.text_area :comment, class: 'form-control', rows: 4, required: true %>
          </div>
          <%= f.hidden_field :board_id, value: @board.id %>
          <div class="text-end">
            <%= f.submit 'コメントを投稿', class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
